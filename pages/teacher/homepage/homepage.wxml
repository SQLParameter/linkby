<view class="pageBody">
  <scroll-view class="homepage" wx:if="{{showHomepage}}">
    <view class='homepage-tabs'>
      <view class="{{showRelease?'viewSelect':''}}" bindtap='switchTabs'>发布作业</view>
      <view class="{{!showRelease?'viewSelect':''}}" bindtap='switchTabsTwo'>作业反馈</view>
    </view>
    <view class="homepage-scrool-body">
      <view wx:if="{{showRelease}}" class='homepage-task-body' scroll-y='true'>
        <view class='homepage-task'>
          <view class='hp-task-state'>
            <image src='/icons/addTask.png'></image>
            <view class="{{isRelease?'hp-task-release':''}}" bindtap='release'>{{isRelease?'今日已发布':'发布作业'}}</view>
          </view>
        </view>
        <view class='hp-fankui-body'>
          <view class='hp-fankui-item' bindtap='toCheckTask'>
            <view class='hp-fankui-img'>
              <image src='/icons/img1.png'></image>
              <view class='hp-fankui-shadow'></view>
              <view class='hp-fankui-shadow-text'>作业反馈</view>
            </view>
            <view class='hp-fankui-date'>
              <view class='hp-task-time'>发表于 {{taskDate}}</view>
              <view class='hp-task-confirm'>完成情况
                <label>{{conf}}</label> / {{cont}}</view>
            </view>
          </view>
        </view>
      </view>
      <scroll-view class="homepage-task-body homepage-taskList" wx:if="{{!showRelease}}" scroll-y='true'>
        <view class="task-scrool-body">
          <view class='task-item' wx:for="{{taskItems}}" wx:for-item="tItem">
            <view class='task-data'>{{tItem.date}}</view>
            <view class='hp-fankui-item' bindtap='toCheckTask'>
              <view class='hp-fankui-img'>
                <image src='/icons/img1.png'></image>
                <view class='hp-fankui-shadow'></view>
                <view class='hp-fankui-shadow-text'>作业反馈</view>
              </view>
              <view class='hp-fankui-date'>
                <view class='hp-task-time'>发表于 {{taskDate}}</view>
                <view class='hp-task-confirm'>完成情况
                  <label>{{conf}}</label> / {{cont}}</view>
              </view>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
  </scroll-view>
  <scroll-view class="homepage" wx:if="{{showTask}}">
    <view class='homepage-tabs'>
      <view class="{{!showTaskList?'viewSelect':''}}" bindtap='switchTaskTabs'>发布通知</view>
      <view class="{{showTaskList?'viewSelect':''}}" bindtap='switchTaskTabsTwo'>通知列表</view>
    </view>
    <view class="homepage-scrool-body">
      <view wx:if="{{!showTaskList}}" class='homepage-task-body' scroll-y='true'>
        <view class='homepage-task'>
          <view class='hp-task-state'>
            <image src='/icons/head.png'></image>
            <view class="hp-notice-state" bindtap='announcement'>发布通知</view>
          </view>
        </view>
        <view class='hp-task-item' bindtap='toTaskList'>
          <view class='hp-task-list'>
            <view class='hp-notice-item'>
              <view class='hp-notice-itemTop'>
                <view class='hp-notice-img'>
                  <image src='/icons/head.png'></image>
                </view>
                <view class='hp-notice-itemBody'>
                  <view class='hp-notice-itemTitle'>
                    关于2016年1月份英语四级
                  </view>
                  <view class='hp-notice-itemContent'>
                    根据省教育招生考试
                  </view>
                </view>
              </view>
              <view class='hp-task-dataOrConfirm'>
                <view class='hp-task-time'>发表于 {{taskDate}}</view>
                <view class='hp-task-confirm'>完成情况
                  <label>{{conf}}</label> / {{cont}}</view>
              </view>
            </view>
          </view>
        </view>
      </view>
      <scroll-view class="homepage" wx:if="{{showTaskList}}" scroll-y='true'>
        <view class="task-scrool-body" style='background-color: #ffffff;'>
          <view class='notice-item' wx:for="{{taskItems}}" wx:for-item="tItem" bindtap='toTaskList'>
            <view class='notice-sign'>
              <view class='task-state'></view>
            </view>
            <view class='notice-body'>
              <view class='notice-head'>
                关于期中考试成绩发布通知
              </view>
              <view class='notice-date'>
                日期:10-18
              </view>
              <image src='/icons/return.png' class='notice-icon'></image>

            </view>
          </view>
        </view>
      </scroll-view>
    </view>
  </scroll-view>
  <scroll-view class="circle" wx:if="{{showCircle}}" scroll-y='true'>
    <view class="circle-scrool-body">
      <view class="circle-head">
        <image class='circle-backImg' src='/icons/backImg.png'></image>
        <image class='circle-head-portrait' src='/icons/id_00001.png'></image>
        <view class='circle-head-name'>张晓媛老师</view>
      </view>
      <view class='circle-btn' bindtap='createCircle'>发布动态</view>
      <view class='circle-item' wx:for="{{circleList}}">
        <view class='circle-item-head'>
          <view class='circle-item-portrait'>
            <image src='/icons/id_00001.png'></image>
          </view>
          <view class='circle-item-content'>
            <view class='circle-item-name'>殷海风爸爸</view>
            <view class='circle-item-uouo'>我我们家孩子还在努力做作业</view>
            <view class='circle-item-imgList'></view>
            <view class='circle-item-operation'>
              <view class='circle-item-time'>刚刚</view>
              <view class='circle-item-delete' bindtap='deleteCircle'>
                <image class='circle-delete-img' src='/icons/delete.png'></image>
                删除</view>
            </view>
          </view>
        </view>
      </view>


    </view>
  </scroll-view>
  <scroll-view wx:if="{{showMy}}" class="my" scroll-y='true'>
    <view class="my-scroll-body">
      <view class='my-head'>
        <image src='/icons/id_00001.png'></image>
        <view>殷海峰爸爸</view>
      </view>
      <view class='my-body' scroll-y='true'>
        <view class='my-classList'>
          <view class='my-classCheck'>查看班级</view>
          <view class="my-classInfo" wx:for="{{classList}}" wx:for-item="tItem">
            <image src='/icons/id_00001.png'></image>
            <view class='my-className'>平阳中学初一(1)班</view>
            <view class='my-classSwitchBtn' wx:if="{{!tItem.isNow}}">切换</view>
            <view class='my-classBtn' bindtap='toClassManager'>管理</view>
          </view>

          <!-- <view class='my-classInfo my-lastClassInfo'>
            <image src='/icons/id_00001.png'></image>
            <view class='my-className'>平阳中学初一(1)班</view>
            <view class='my-classSwitchBtn'>切换</view>
            <view class='my-classBtn'>管理</view>
          </view> -->
          <!-- <view class='my-classInfo my-lastClassInfo my-classInfo-center'>
         您暂未加入任何班级
        </view>  -->
        </view>
        <view class='my-create-class' bindtap='toCreateManager'>
          +创建班级
        </view>

        <view class='my-circle'>
          <view>意见反馈</view>
          <image class='my-circle-ret' src='/icons/return.png'></image>
        </view>
        <!-- <view class='my-circle my-Lastcircle'>
          <view class='my-Lastcircle-border'>
            <view>意见反馈</view>
            <image class='my-circle-ret' src='/icons/return.png'></image>
          </view>
        </view> -->
        <view class='my-signOut'>
          <view>退出</view>
        </view>
      </view>
    </view>
  </scroll-view>
  <view class='menu'>
    <view class='menu-item' bindtap='showHomepage'>
      <view class='menu-img'>
        <image src='/icons/class.png'></image>
      </view>
      <view class='{{showHomepage?"menu-txt menu-txt-select":"menu-txt"}}'>作业</view>
    </view>
    <view class='menu-item' bindtap='showTask'>
      <view class='menu-img'>
        <image src='/icons/task.png'></image>
      </view>
      <view class='{{showTask?"menu-txt menu-txt-select":"menu-txt"}}'>通知</view>
    </view>
    <view class='menu-item' bindtap='showCircle'>
      <view class='menu-img'>
        <image src='/icons/not.png'></image>
      </view>
      <view class='{{showCircle?"menu-txt menu-txt-select":"menu-txt"}}'>班级圈</view>
    </view>
    <view class='menu-item' bindtap='showMy'>
      <view class='menu-img'>
        <image src='/icons/my.png'></image>
      </view>
      <view class='{{showMy?"menu-txt menu-txt-select":"menu-txt"}}'>我的</view>
    </view>
  </view>
  <view class='circle-shadow' wx:if="{{showShadow}}"></view>
  <view class='circle-confrim' wx:if="{{showShadow}}">
    <view class='circle-confrim-info'>确认删除这条状态吗？</view>
    <view class='circle-confrim-btns'>
      <view class='circle-confrim-confirm' bindtap='hideShadow'>确定</view>
      <view class='circle-confrim-cancel' bindtap='hideShadow'>取消</view>
    </view>
  </view>
</view>