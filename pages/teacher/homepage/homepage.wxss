.pageBody {
  flex-direction: column;
  position: absolute;
}

.homepage, .task, .circle, .my, .task-scrool-list-body {
  flex: 1;
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  display: flex;
  flex-direction: column;
}

.homepage-scrool-body, .task-scrool-body, .circle-scrool-body, .my-scroll-body,  {
  height: 100.5%;
  background-color: #f2f2f2;
  /* box-sizing: border-box; */
}

.homepage-scrool-body {
  height: 100%;
}

.homepage-task-body {
  height: 100.5%;
}

.menu {
  height: 90rpx;
  width: 100%;
  display: flex;
  z-index: 999;
  background-color: #fff;
}

.menu-item {
  width: 25%;
  text-align: center;
  line-height: 90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.menu-img {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.menu-img image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 15rpx;
  margin-left: 5rpx;
}

.menu-txt {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
}

/*首页*/

.homepage-scrool-body {
  display: flex;
  flex-direction: column;
}

.homepage-tabs {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  font-size: 28rpx;
  /* font-weight: bold; */
  border-top: 1px solid #ddd;
}

.homepage-tabs view {
  width: 50%;
  height: 98rpx;
  float: left;
  line-height: 100rpx;
  text-align: center;
}

.homepage-tabs .viewSelect {
  color: #1abc9c;
  border-bottom: 1px solid #1abc9c;
}

.homepage-task {
  height: 580rpx;
  background-color: #fff;
  flex-direction: column;
}

.hp-task-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 130rpx;
}

.hp-task-state image {
  width: 200rpx;
  height: 200rpx;
}

.hp-task-state view {
  width: 410rpx;
  height: 75rpx;
  border-radius: 50rpx;
  border: 1px solid #17c6ee;
  text-align: center;
  line-height: 75rpx;
  background-color: #fff;
  color: #17c6ee;
  font-size: 32rpx;
  margin-top: 50rpx;
}

.hp-task-release {
  background-color: #17c6ee !important;
  color: #fff !important;
}

.hp-task-state .already {
  background-color: #17c6ee;
  color: #fff;
}

.hp-task-state .hp-notice-state {
  border: 1px solid #1abc9c;
  color: #1abc9c;
}

.hp-task-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 30rpx;
  height: 360rpx;
}

.hp-task-data {
  height: 45rpx;
  line-height: 45rpx;
  margin-bottom: 30rpx;
  width: 200rpx;
  background-color: #e6e6e6;
  text-align: center;
  border-radius: 30rpx;
}

.hp-task-list {
  flex: 1;
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.hp-task-list image {
  height: 280rpx;
  border-radius: 20rpx;
}

.hp-task-time {
  float: left;
}

.hp-task-confirm {
  float: right;
}

.hp-task-dataOrConfirm {
  height: 40rpx;
  line-height: 40rpx;
  padding: 0px 25rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
  color: #7a7a7a;
  width: 100%;
}

.hp-task-dataOrConfirm label {
  color: #ff7b8a;
}

.hp-task-title {
  position: absolute;
  height: 70rpx;
  line-height: 70rpx;
  top: 220rpx;
  color: #fff;
  width: 320px;
  font-size: 28rpx;
  padding-left: 50rpx;
}

.hp-task-shadow {
  position: absolute;
  height: 70rpx;
  line-height: 60rpx;
  top: 225rpx;
  background-color: #333;
  opacity: 0.5;
  width: 320px;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  left: 27rpx;
}

.hp-task-status {
  margin-left: 50rpx;
  width: 260rpx;
}

.hp-task-status view {
  float: right;
  color: #ff8492;
}

.hp-task-point {
  position: absolute;
  height: 30rpx;
  width: 5rpx;
  /* border: 2px solid #1abc9c; */
  background-color: #1abc9c;
  top: 50rpx;
  left: 30rpx;
}

.hp-task-forward {
  position: absolute;
  width: 15rpx;
  height: 30rpx;
  top: 50rpx;
  right: 30rpx;
}

::-webkit-scrollbar {
  height: 0;
  width: 0;
  color: transparent;
}

.task-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
