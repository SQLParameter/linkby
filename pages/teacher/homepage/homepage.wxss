.hp-task-scrollList {
  flex: 1;
}

.homepage-feedback {
  height: 500rpx;
}

/*作业列表*/

.task {
  height: auto;
}

::-webkit-scrollbar {
  height: 0;
  width: 0;
  color: transparent;
}

.task-shadow {
  position: absolute;
  height: 70rpx;
