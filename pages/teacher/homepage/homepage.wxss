/*通知*/

.hp-notice-item {
  display: flex;
  flex-direction: column;
  height: 360rpx;
  width: 100%;
  padding: 30rpx 20rpx 15rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
}

.hp-notice-itemTop {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.hp-notice-item .hp-notice-img {
  height: 100%;
  width: 100rpx;
}

.hp-notice-item .hp-notice-img image {
  height: 80rpx;
  width: 80rpx;
}

.hp-notice-itemBody {
  flex: 1;
}

.hp-notice-itemTitle {
  font-weight: bold;
}

.hp-notice-itemContent {
  font-size: 26rpx;
}

.hp-task-dataOrConfirmTwo {
  height: 60rpx;
}

.notice-item {
  padding: 10rpx 20rpx;
  display: flex;
  width: 100%;
  height: 120rpx;
}

.notice-sign {
  width: 50rpx;
}

.notice-body {
  flex: 1;
  position: relative;
  border-bottom: 1px solid #ddd;
  height: 100%;
}

.notice-head, .notice-date {
  width: 100%;
}

.notice-head {
  font-weight: bold;
  height: 60rpx;
  line-height: 70rpx;
}

.notice-date {
  height: 50rpx;
  line-height: 50rpx;
}

.notice-icon {
  position: absolute;
  top: 50rpx;
  right: 30rpx;
  height: 20rpx;
  width: 15rpx;
}

/* 班级圈  */

.circle-head {
  height: 300rpx;
  width: 100%;
  position: relative;
}

.circle-backImg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.circle-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1abc9c;
  color: #fff;
  text-align: center;
  margin-bottom: 30rpx;
}

.circle-head .circle-head-portrait {
  height: 120rpx;
  width: 120rpx;
  position: absolute;
  top: 80rpx;
  left: 30rpx;
}

.circle-head .circle-head-name {
  color: #fff;
  position: absolute;
  display: inline-block;
  top: 120rpx;
  left: 180rpx;
  font-weight: bold;
}

.circle-item {
  width: 100%;
  background-color: #fff;
  height: auto;
  border-bottom: 1px solid #ddd;
  padding: 0 50rpx 10rpx 20rpx;
  box-sizing: border-box;
}

.circle-item-head {
  min-height: 120rpx;
  display: flex;
}

.circle-item-portrait {
  height: 120rpx;
  width: 120rpx;
}
.circle-item-portrait image{
  height: 90rpx;
  width: 90rpx;
  position: relative;
  top: 15rpx;
}

.circle-item-content {
  flex: 1;
}

.circle-item-name {
  height: 60rpx;
  width: 100%;
  line-height: 60rpx;
  font-weight: bold;
}

.circle-item-uouo {
  min-height: 60rpx;
  width: 100%;
  line-height: 60rpx;
}
.circle-item-imgList{
  width: 100%;
  height: 300rpx;
  background-color: #17c6ee;
}
.circle-item-operation{
  position: relative;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}
.circle-item-time,.circle-item-delete{
  position: absolute;
  display: inline-block;
  color: #7a7a7a;  
}
.circle-item-delete{
  right: 20rpx;
}
.circle-scrool-body{
  margin-bottom: 40rpx;
}
/*我的*/

.my-head {
  height: 230rpx;
  width: 100%;
  background-color: #ff9e5c;
  display: flex;
  align-items: center;
  padding: 30rpx;
  /* justify-content: center; */
}

.my-head image {
  height: 150rpx;
  width: 150rpx;
}

.my-head view {
  margin-left: 30rpx;
  color: #fff;
  font-size: 30rpx;
}

.my-body {
  flex: 1;
  height: 100rpx;
}

.my-classList {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}

.my-classCheck {
  height: 55rpx;
  /* line-height: 50rpx; */
  font-weight: bold;
  /* font-size: 29rpx; */
  border-bottom: 1px solid #e6e6e6;
}

.my-classInfo {
  display: flex;
  align-items: center;
  height: 150rpx;
  line-height: 150rpx;
  border-bottom: 1px solid #e6e6e6;
}

.my-classInfo image {
  height: 100rpx;
  width: 100rpx;
}

.my-className {
  flex: 1;
  padding-left: 30rpx;
}

.my-classBtn, .my-classSwitchBtn {
  border: 1px solid #1abc9c;
  color: #1abc9c;
  height: 50rpx;
  width: 120rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 5rpx;
}

.my-lastClassInfo {
  border: none;
}

.my-classSwitchBtn {
  border: 1px solid #ff9e5c;
  background-color: #ff9e5c;
  color: #fff;
}

.my-circle, .my-Lastcircle-border {
  display: flex;
  width: 100%;
  height: 90rpx;
  margin-top: 30rpx;
  line-height: 90rpx;
  font-weight: bold;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  align-items: center;
  position: relative;
}

.my-circle view {
  flex: 1;
}

.my-circle-new {
  position: absolute;
  width: 5rpx;
  height: 5rpx;
  border-radius: 2.5rpx;
  background-color: red;
  border: 1rpx solid red;
  right: 55rpx;
}

.my-circle .my-circle-newHead {
  width: 70rpx;
  height: 70rpx;
}

.my-circle-ret {
  margin-left: 30rpx;
  height: 30rpx;
  width: 15rpx;
}

.my-Lastcircle {
  margin-top: 0;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-bottom: 30rpx;
}

.my-Lastcircle-border {
  border-top: 1px solid #e6e6e6;
  width: 100%;
  padding: 0;
  margin: 0;
}

.my-classInfo-center {
  text-align: center;
  display: block;
  height: 120rpx;
  line-height: 120rpx;
}
